{{ form_start(form, {'attr': {'class': 'grid grid-gap-20'}}) }}
<div class="form-control grid grid-gap-10">
    {{ form_label(form.fullName, 'Nom', {'label_attr': {'class': 'form-control-label'}}) }}
    {{ form_widget(form.fullName, {'attr': {'class': 'form-control'}}) }}
</div>
<div class="form-control grid grid-gap-10">
    {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-control-label'}}) }}
    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
</div>
<div class="form-control grid grid-gap-10">
    {{ form_label(form.message, 'Message', {'label_attr': {'class': 'form-control-label'}}) }}
    {{ form_widget(form.message, {'attr': {'class': 'form-control'}}) }}
</div>

<div class="form-control">
    <input type="submit" value="Send" class="btn btn-primary py-3 px-5">
</div>
{{ form_end(form) }}
