{% extends "base.html.twig" %}

{% block title %}Modifier{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col s12 m12 l12">
                <h4>Modifier la cat√©gorie {{ category.label }}</h4>
            </div>
        </div>
        {% include "includes/category_form.html.twig" %}
    </div>

    <section>
        <div>
            {% for category in categories %}
                <a style="background-color: {{ category.color }}" href="{{ path('category_edit', {'id': category.id}) }}" class="category">
                    <span class="category-label">{{ category.label }}</span>
                </a>
            {% endfor %}
        </div>
    </section>

    {% block javascripts %}
        {{ parent() }}
        {{ encore_entry_script_tags('categories') }}
    {% endblock %}
{% endblock %}